//- 子菜单的小三角
mixin shape 
	span.shape
		i.line
		i.line.l2
		i.line.l3
		i.line.l4
		i.line.l5
		i.line.l6

//- head公用部分
mixin header(title,cssarr,navarr)
	head
		meta(charset="utf-8")
		title #{title} 
		meta(name="Keywords",content="云信创富,云信官网,云信创富官网,北京云信创富,小微普惠,普惠金融,金融科技,互联网资产管理,资产管理,资产管理公司,创新资管,消费金融,房产抵押,资管服务")
		meta(name="Description",content="云信创富是一家响应国家号召成立的，专业从事普惠金融业务的资产管理公司。")
		link(href="favicon.ico",rel="shortcut icon")
		-each css in cssarr
			link(href= css,rel="stylesheet")
	body
		div.header
			div.inside
				h1
					a.logo(href="index.html") 云信创富
				ul.nav
					li
						a.hover(href="index.html") 首页
					li
						a(href="javascript:;") 普惠金融
						p.subnav
							+shape
							img(src="img/common/subnav02.png")
							a(href="xwph-intro.html") 小微普惠
							a(href="xwph-exam.html") 优秀案例
					li
						a(href="javascript:;") 金融科技
						p.subnav
							+shape
							img(src="img/common/subnav03.png")
							a(href="fintech.html") 金融科技
							a(href="output.html") 整合输出
							a(href="application.html") 场景应用

					li
						a(href="javascript:;") 企业聚焦
						p.subnav
							+shape
							img(src="img/common/subnav01.png")
							a(href="trade-news.html") 行业动态
							a(href="trade-news.html") 企业动态
							a(href="trade-news.html") 媒体报道
					li
						a(href="about.html") 关于我们
